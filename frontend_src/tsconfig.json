{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": ["ES2021", "DOM", "DOM.Iterable"],
        "declaration": false,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": false,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "outDir": "./dist",
        "sourceMap": false,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"]
}
